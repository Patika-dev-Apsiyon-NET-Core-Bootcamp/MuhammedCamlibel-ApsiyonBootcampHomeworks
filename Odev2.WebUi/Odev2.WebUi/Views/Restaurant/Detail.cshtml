@model Restaurant

<div class="container">

    <div class="row">
        <div class="col-6">
            <h2>Restaurant Name : @Model.RestaurantName</h2>
        </div>
        <div class="col-6">
            <h2>Restaurant Address : @Model.Address</h2>
        </div>
    </div>
    <hr />
    <h2>Foods</h2>
    @if (Model.Foods.Count == 0)
    {
        <p> there is no food in the restaurant </p>
    }
    else
    {
        @foreach (var food in Model.Foods)
        {
            <div class="row">
                <div class="col-6">
                    <h3 style="display:inline-block"  class="text-light bg-dark">@food.Name</h3> 
                    
                </div>
            </div>
            <hr />
        }
    }




</div> 
